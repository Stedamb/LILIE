---
// Import the carousel components from your UI library
import { Carousel, CarouselContent, CarouselItem, CarouselPrevious, CarouselNext } from '../components/ui/carousel';

// Sample event data - you can replace this with your actual data
const events = [
  {
    id: 1,
    title: "SONIC RITUAL",
    date: "May 15, 2025",
    location: "Underground Bunker, Milan",
    image: "/events/event1.jpg", // You'll need to add these images to your public folder
    description: "A night of experimental techno and ambient soundscapes."
  },
  {
    id: 2,
    title: "BASS MATERIALISM",
    date: "June 22, 2025",
    location: "Abandoned Factory, Turin",
    image: "/events/event2.jpg",
    description: "Heavy bass music and drum patterns to move your body and mind."
  },
  {
    id: 3,
    title: "DIGITAL SHAMANISM",
    date: "July 10, 2025",
    location: "Secret Forest Location, Como",
    image: "/events/event3.jpg",
    description: "A journey through psychedelic sounds and visuals."
  },
  {
    id: 4,
    title: "FUTURE PRIMITIVE",
    date: "August 5, 2025",
    location: "Beach Club, Rimini",
    image: "/events/event4.jpg",
    description: "Tribal rhythms meet futuristic electronic production."
  }
];

// Default background image if event image is not available
const defaultBg = "bg-gradient-to-br from-purple-900 to-black";
---

<div class="w-full py-12">
  <Carousel client:load opts={{ loop: true }}>
    <div class="relative">
      <CarouselContent>
        {events.map(event => (
          <CarouselItem key={event.id} className="md:basis-1/2 lg:basis-1/3">
            <div class="group relative overflow-hidden rounded-lg border border-white/10 bg-black/50 backdrop-blur-sm transition-all hover:border-purple-500/50 hover:shadow-lg hover:shadow-purple-500/20">
              <div class={`h-48 w-full overflow-hidden ${defaultBg}`}>
                {event.image && (
                  <img 
                    src={event.image} 
                    alt={event.title} 
                    className="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                    onerror="this.style.display='none'" 
                  />
                )}
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2">{event.title}</h3>
                <div class="flex items-center text-sm text-white/70 mb-3">
                  <span class="mr-3">{event.date}</span>
                  <span>{event.location}</span>
                </div>
                <p class="text-white/80 text-sm">{event.description}</p>
                <div class="mt-4">
                  <a 
                    href={`/events/${event.id}`} 
                    class="inline-flex items-center justify-center rounded-md bg-purple-600 px-4 py-2 text-sm font-medium text-white shadow transition-colors hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
                  >
                    Details
                  </a>
                </div>
              </div>
            </div>
          </CarouselItem>
        ))}
      </CarouselContent>
    </div>
    
    <div class="flex justify-center gap-2 mt-8">
      <CarouselPrevious className="static translate-y-0 translate-x-0" />
      <CarouselNext className="static translate-y-0 translate-x-0" />
    </div>
  </Carousel>
</div>
