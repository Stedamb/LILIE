---
import MainLayout from '../layouts/main.astro';

const pageContent = {
  title: 'Events',
};

const upcomingEvents = [
  {
    title: "Digital Art Exhibition",
    date: "April 15, 2025",
    location: "Virtual Gallery",
    description: "An immersive exhibition showcasing digital artworks from emerging artists around the world. Experience interactive installations and cutting-edge digital creations.",
    featured: true
  },
  {
    title: "Electronic Music Festival",
    date: "May 20-22, 2025",
    location: "Urban Space, Downtown",
    description: "Three days of electronic music performances, featuring both established artists and new talents. Visual projections and interactive installations complement the audio experience.",
    featured: true
  },
  {
    title: "Digital Design Workshop",
    date: "June 5, 2025",
    location: "LILIE Studio",
    description: "Learn the fundamentals of digital design in this hands-on workshop. Perfect for beginners and intermediate designers looking to enhance their skills.",
    featured: false
  },
  {
    title: "Experimental Sound Art",
    date: "July 10, 2025",
    location: "The Underground",
    description: "A unique showcase of experimental sound art that pushes the boundaries of audio perception. Features installations that blend visual and auditory experiences.",
    featured: false
  }
];
---

<MainLayout content={pageContent}>
  <div class="container mx-auto px-6 py-16">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-8">Events</h1>
      
      <!-- Featured Events -->
      <div class="mb-16">
        <h2 class="text-2xl font-semibold text-white mb-6 inline-block relative">
          Featured Events
          <span class="absolute -bottom-1 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/50 to-transparent"></span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {upcomingEvents.filter(event => event.featured).map(event => (
            <div class="bg-black/20 backdrop-blur-sm border border-white/10 rounded-lg p-6 hover:border-white/20 transition-all duration-300 group">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-semibold text-white group-hover:text-white/90 transition-colors">{event.title}</h3>
                <span class="text-white/60 text-sm px-3 py-1 bg-white/5 rounded-full">{event.date}</span>
              </div>
              <p class="text-white/70 mb-4">{event.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-white/50 text-sm">{event.location}</span>
                <a href="#" class="text-white hover:text-white/80 text-sm underline underline-offset-4 transition-colors">Learn more</a>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Upcoming Events -->
      <div>
        <h2 class="text-2xl font-semibold text-white mb-6 inline-block relative">
          Upcoming Events
          <span class="absolute -bottom-1 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/50 to-transparent"></span>
        </h2>
        
        <div class="space-y-6">
          {upcomingEvents.filter(event => !event.featured).map(event => (
            <div class="bg-black/20 backdrop-blur-sm border border-white/10 rounded-lg p-5 hover:border-white/20 transition-all duration-300 flex flex-col md:flex-row md:items-center gap-4">
              <div class="md:w-1/5">
                <span class="text-white/80 font-medium block">{event.date}</span>
                <span class="text-white/50 text-sm">{event.location}</span>
              </div>
              <div class="md:w-3/5">
                <h3 class="text-lg font-medium text-white mb-1">{event.title}</h3>
                <p class="text-white/70 text-sm">{event.description}</p>
              </div>
              <div class="md:w-1/5 flex justify-end">
                <a href="#" class="px-4 py-2 border border-white/20 rounded hover:bg-white/5 text-white/90 text-sm transition-all">Details</a>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Newsletter Signup -->
      <div class="mt-16 bg-black/30 backdrop-blur-md border border-white/10 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-semibold text-white mb-2">Stay Updated</h2>
        <p class="text-white/70 mb-6 max-w-2xl mx-auto">Subscribe to our newsletter to receive updates about upcoming events and exclusive invitations.</p>
        
        <form class="flex flex-col md:flex-row gap-4 max-w-xl mx-auto">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white placeholder:text-white/40 focus:outline-none focus:border-white/30"
            required
          />
          <button 
            type="submit" 
            class="bg-white/10 hover:bg-white/15 text-white px-6 py-3 rounded-lg transition-colors border border-white/20 hover:border-white/30"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>
</MainLayout>
