---
import MainLayout from '../layouts/main.astro';

const pageContent = {
  title: 'Artists',
};

const featuredArtists = [
  {
    name: "Elena Voss",
    specialty: "Digital Sculpture & VR",
    bio: "Elena creates immersive digital sculptures that challenge our perception of space and form. Her work has been exhibited in virtual galleries worldwide.",
    image: "/artists/artist1.jpg"
  },
  {
    name: "Marcus Chen",
    specialty: "Generative Art",
    bio: "Marcus uses algorithms and code to create evolving digital artworks that respond to data inputs and environmental factors.",
    image: "/artists/artist2.jpg"
  },
  {
    name: "Sophia Reyes",
    specialty: "Audio-Visual Composition",
    bio: "Sophia blends electronic music production with synchronized visual elements to create multi-sensory experiences.",
    image: "/artists/artist3.jpg"
  },
  {
    name: "Julian Wright",
    specialty: "Interactive Installations",
    bio: "Julian designs interactive installations that respond to audience movement and participation, creating unique collaborative experiences.",
    image: "/artists/artist4.jpg"
  }
];

const collaboratingArtists = [
  "Aisha Johnson", "Tomas Novak", "Leila Patel", "David Kim", 
  "Nora Lindberg", "Carlos Mendez", "Yuki Tanaka", "Zoe Williams"
];
---

<MainLayout content={pageContent}>
  <div class="container mx-auto px-6 py-16">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-8">Artists</h1>
      
      <!-- Featured Artists -->
      <div class="mb-16">
        <h2 class="text-2xl font-semibold text-white mb-6 inline-block relative">
          Featured Artists
          <span class="absolute -bottom-1 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/50 to-transparent"></span>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {featuredArtists.map(artist => (
            <div class="bg-black/20 backdrop-blur-sm border border-white/10 rounded-lg overflow-hidden group hover:border-white/20 transition-all duration-300">
              <div class="aspect-video bg-black/40 relative overflow-hidden">
                <!-- Placeholder for artist image -->
                <div class="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-purple-900/30 to-blue-900/30">
                  <span class="text-white/30 text-xl">{artist.name.split(' ').map(part => part[0]).join('')}</span>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-white mb-1 group-hover:text-white/90 transition-colors">{artist.name}</h3>
                <p class="text-white/60 text-sm mb-3">{artist.specialty}</p>
                <p class="text-white/70">{artist.bio}</p>
                <div class="mt-4 flex justify-end">
                  <a href="#" class="text-white hover:text-white/80 text-sm underline underline-offset-4 transition-colors">View profile</a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Collaborating Artists -->
      <div class="mb-16">
        <h2 class="text-2xl font-semibold text-white mb-6 inline-block relative">
          Collaborating Artists
          <span class="absolute -bottom-1 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/50 to-transparent"></span>
        </h2>
        
        <div class="flex flex-wrap gap-3">
          {collaboratingArtists.map(artist => (
            <a href="#" class="px-4 py-2 bg-black/20 backdrop-blur-sm border border-white/10 rounded-full text-white/80 hover:text-white hover:bg-black/30 hover:border-white/20 transition-all">
              {artist}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Call to Action -->
      <div class="mt-16 bg-black/30 backdrop-blur-md border border-white/10 rounded-lg p-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
          <div class="md:w-2/3">
            <h2 class="text-2xl font-semibold text-white mb-2">Join Our Artist Community</h2>
            <p class="text-white/70">We're always looking for innovative artists pushing the boundaries of digital expression. If you're interested in collaborating or showcasing your work, we'd love to hear from you.</p>
          </div>
          <div class="md:w-1/3 flex justify-center md:justify-end">
            <a 
              href="/contact" 
              class="bg-white/10 hover:bg-white/15 text-white px-6 py-3 rounded-lg transition-colors border border-white/20 hover:border-white/30"
            >
              Get in Touch
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
